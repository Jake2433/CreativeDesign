<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/new_id"
        android:hint="your@id.com" />

    <Button
        android:text="SUBMIT"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:id="@+id/btn_submit"
        android:onClick="insert"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/new_pwagain"
        android:layout_alignParentStart="true"
        android:layout_x="5dp"
        android:layout_y="364dp" />

    <Button
        android:text="중복확인"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_x="238dp"
        android:layout_y="0dp"
        android:onClick="DuplicationCheck"
        android:id="@+id/button" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/new_pwagain"
        android:hint="비밀번호 확인"
        android:layout_below="@+id/new_id"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_x="0dp"
        android:layout_y="93dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/new_pw"
        android:hint="비밀번호"
        android:layout_below="@+id/new_id"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_x="0dp"
        android:layout_y="51dp" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_x="1dp"
        android:layout_y="140dp"
        android:id="@+id/new_name"
        android:hint="이름"
        android:layout_height="43dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:inputType="date"
        android:ems="10"
        android:layout_x="2dp"
        android:layout_y="188dp"
        android:id="@+id/new_birthday"
        android:hint="생년월일(YYYYMMDD)" />

    <RadioGroup
        android:layout_width="208dp"
        android:layout_height="45dp"
        android:layout_x="120dp"
        android:layout_y="247dp"
        android:orientation="horizontal"
        android:checkedButton="@+id/new_male">

        <RadioButton
            android:text="남성"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="99dp"
            android:layout_y="299dp"
            android:id="@+id/new_male"
            android:checked="false"/>

        <RadioButton
            android:text="여성"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="298dp"
            android:layout_y="199dp"
            android:id="@+id/new_female" />

    </RadioGroup>

    <TextView
        android:text="성별"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_x="3dp"
        android:layout_y="248dp"
        android:id="@+id/view_sex" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_x="2dp"
        android:layout_y="292dp"
        android:id="@+id/new_phone"
        android:hint="핸드폰 번호(-없이)" />

</AbsoluteLayout>