<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statusLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:spinnerMode="dialog"/>

    <TableLayout
        android:id="@+id/tbLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                style="@style/StatusValue"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/textView5"
                style="@style/StatusName"
                android:layout_height="wrap_content"
                android:text="현재" />

            <TextView
                android:id="@+id/textView3"
                style="@style/StatusName"
                android:layout_height="wrap_content"
                android:text="희망" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                style="@style/StatusName"
                android:layout_height="wrap_content"
                android:text="조도" />

            <TextView
                android:id="@+id/tvCurLight"
                style="@style/StatusValue"
                android:layout_height="wrap_content"
                android:text="90" />

            <Button
                android:id="@+id/btnDesirLight"
                style="@style/DesirButton"
                android:layout_height="wrap_content"
                android:text="80" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/result_test"
                style="@style/StatusName"
                android:layout_height="wrap_content"
                android:text="온도" />

            <TextView
                android:id="@+id/tvCurTemper"
                style="@style/StatusValue"
                android:layout_height="wrap_content"
                android:text="17" />

            <Button
                android:id="@+id/btnDesirTemper"
                style="@style/DesirButton"
                android:layout_height="wrap_content"
                android:text="30" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                style="@style/StatusName"
                android:layout_height="wrap_content"
                android:text="환기(%)" />

            <TextView
                android:id="@+id/tvCurAirCondi"
                style="@style/StatusValue"
                android:layout_height="wrap_content"
                android:text="20" />

            <Button
                android:id="@+id/btnDesirAirCondi"
                style="@style/DesirButton"
                android:layout_height="wrap_content"
                android:text="30" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                style="@style/StatusName"
                android:layout_height="wrap_content"
                android:text="습도" />

            <TextView
                android:id="@+id/tvCurHumid"
                style="@style/StatusValue"
                android:layout_height="wrap_content"
                android:text="30" />

            <Button
                android:id="@+id/btnDesirHumid"
                style="@style/DesirButton"
                android:layout_height="wrap_content"
                android:text="20" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">

            <ImageButton
                android:id="@+id/btnFeed"
                style="@style/BtnManipulation"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/feed" />

            <ImageButton
                android:id="@+id/btnWater"
                style="@style/BtnManipulation"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/water" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnCCTV"
                style="@style/BtnManipulation"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cctv" />

            <ImageButton
                android:id="@+id/btnGraph"
                style="@style/BtnManipulation"
                android:layout_width="170dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/graph" />
        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_x="0dp"
        android:layout_y="516dp"
        app:srcCompat="@drawable/logout" />


</AbsoluteLayout>